{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "regions": ["iad1"],
  "functions": {
    "src/pages/api/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NEXT_PUBLIC_GOOGLE_CLIENT_ID": "@google_client_id",
    "NEXT_PUBLIC_API_ENDPOINT": "@api_endpoint"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_GOOGLE_CLIENT_ID": "@google_client_id",
      "NEXT_PUBLIC_API_ENDPOINT": "@api_endpoint"
    }
  }
